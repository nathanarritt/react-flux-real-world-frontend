.context-selector-component {
    position: relative

    .context-selector-selected {
        no-select()
        cursor: pointer
        font-size: 1.3rem
        padding-right: 20px

        .context-selector-selected-item {
            line-height: 25px
            padding-right: 2px
            vertical-align: top
        }

        .context-selector-selected-icon {
            font-size: 1.5rem
            line-height: 25px
            position: absolute
            right: 8px
            vertical-align: top
        }
    }

    .context-selector-options {
        background: $context-selector-options-background
        border: 1px solid $context-selector-options-border
        border-radius: 5px
        color: $context-selector-options-text
        font-size: 1.3rem
        padding: 6px 0
        position: absolute
        right: -2px
        top: 30px
        text-align: left

        &::after {
            content: ""
            border: 5px solid transparent
            border-bottom-color: $context-selector-options-after-border
            border-top: none
            height: 0
            position: absolute
            right: 8px
            top: -5px
            width: 0
        }

        &::before {
            content: ""
            border: 6px solid transparent
            border-bottom-color: $context-selector-options-before-border
            border-top: none
            height: 0
            position: absolute
            right: 7px
            top: -6px
            width: 0
        }

        li {
            cursor: pointer
            line-height: 24px
            padding: 0 12px
        }

        li:hover {
            background: $context-selector-options-hover-background
        }

        li.selected {
            background: $context-selector-options-selected-background
            color: $context-selector-options-selected-text
        }
    }
}
